.grid-row
  .column-two-thirds
    %h1.heading-xlarge= t("registration.title")
    %h3.heading-medium= t("prerequisites.form.title")
    %p= t("prerequisites.form.prompt")
    = simple_form_for @prerequisite, url: prerequisites_path, method: :put do |f|
      %legend.visuallyhidden= t("prerequisites.form.title")
      - if f.error_notification
        .error-summary{"aria-labelledby" => "error-summary-heading", :role => "group", :tabindex => "-1"}
          %h1#error-summary-heading.heading-medium.error-summary-heading
            = f.error_notification
          %p= t("registration.error_description")
      %div{:class => "form-group#{" error" if f.error_notification}"}
        = form_checkbox(f, :not_registered_before_on_ssr)
        = form_checkbox(f, :not_registered_under_part_1)
        = form_checkbox(f, :not_owned_by_company)
        = form_checkbox(f, :not_commercial_fishing_or_submersible)
        = form_checkbox(f, :owners_are_uk_residents)
        = form_checkbox(f, :owners_are_eligible_to_register)
        = form_checkbox(f, :not_registered_on_foreign_registry)
      = f.button :submit, "Continue", class: "button"
