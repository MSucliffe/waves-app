.modal-body
  .postcode-lookup
    = f.simple_fields_for :owner do |owner_f|
      - owner_f.object = f.object.owner
      .row
        .col-md-3
          - if f.object.new_record?
            = owner_f.input :name, label: "Owner Name", input_html: { class: "upcase owner-name"}
          - else
            = owner_f.input :name, label: "Owner Name", input_html: { class: "upcase owner-name"},
              disabled: true
            = owner_f.input :name, as: :hidden

        .col-md-3
          = owner_f.input :email
        .col-md-3
          = owner_f.input :phone_number, label: "Phone Number", input_html: { class: "upcase" }
        .col-md-3
          = owner_f.input :nationality, label: "Country of Nationality", as: :select, collection: WavesUtilities::Nationality.all, input_html: { class: "upcase" }

      = render partial: "submissions/basic/forms/owners/fields/address", locals: { owner_f: owner_f }
      = render partial: "submissions/basic/forms/owners/declaration_fields", locals: { f: f }
.modal-footer
  = button_tag(type: 'submit', class: "btn btn-primary pull-right") do
    Save Individual Owner
