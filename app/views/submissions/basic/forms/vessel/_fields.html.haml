%h2 Vessel Details
= submission_f.simple_fields_for :vessel do |vessel_f|
  %fieldset{ disabled: disabled }
    - vessel_f.object = submission_f.object.vessel
    .row
      .col-md-3
        = vessel_f.input :name, label: "Approved Vessel Name", input_html: { class: "upcase" }
      .col-md-3
        = vessel_f.input :alt_name_1, input_html: { class: "upcase" }
        - unless disabled
          = link_to "#", id: "alt_name_1", class: "promote_alt_name" do
            %i.fa.fa-check
            Use this name
      .col-md-3
        = vessel_f.input :alt_name_2, input_html: { class: "upcase" }
        - unless disabled
          = link_to "#", id: "alt_name_2", class: "promote_alt_name" do
            %i.fa.fa-check
            Use this name
      .col-md-3
        = vessel_f.input :alt_name_3, input_html: { class: "upcase" }
        - unless disabled
          = link_to "#", id: "alt_name_3", class: "promote_alt_name" do
            %i.fa.fa-check
            Use this name
    %hr
    .row
      .col-md-3
        = vessel_f.input :make_and_model, input_html: { class: "upcase" }
      .col-md-3
        = vessel_f.input :length_in_meters, input_html: { class: "upcase" }
      .col-md-3
        = vessel_f.input :vessel_type, collection: vessel_types_collection, as: :select, disabled: disabled,
          include_blank: false, input_html: { class: "select2 select2_single" }
      .col-md-3
        = vessel_f.input :vessel_type_other, input_html: { class: "upcase" }
      .col-md-3
        = vessel_f.input :hin, input_html: { class: "upcase" }
      .col-md-3
        = vessel_f.input :number_of_hulls, collection: 1..9, as: :select, disabled: disabled,
          include_blank: false, input_html: { class: "select2 select2_single" }
      .col-md-3
        = vessel_f.input :radio_call_sign, input_html: { class: "upcase" }
      .col-md-3
        = vessel_f.input :mmsi_number, input_html: { class: "upcase" }
%hr
.row
  .col-md-3
    = submission_f.input :applicant_name, input_html: { class: "upcase" }
  .col-md-3
    = submission_f.input :applicant_email

.postcode-lookup
  = submission_f.simple_fields_for :delivery_address do |delivery_f|
    .submission-delivery-address
      %hr
      - delivery_f.object = submission_f.object.delivery_address
      .row
        .col-md-3
          = delivery_f.input :name, input_html: { class: "upcase" }
        .col-md-3
          %label.form-label-bold
            Postcode
          .input-group
            = text_field_tag :postcode_lookup_field, "", class: "postcode-lookup-field form-control"
            %span.input-group-btn
              = link_to "Lookup address", "#", class: "postcode-lookup-button btn btn-primary"
      .row
        .col-md-6.form-group
          .postcode-lookup-api-key.hidden= ENV["POSTCODE_LOOKUP_API_KEY"]
          .postcode-results-field
      .clearfix
      .row
        .col-md-3
          = delivery_f.input :address_1, input_html: { class: "upcase address-1" }
        .col-md-3
          = delivery_f.input :address_2, input_html: { class: "upcase address-2" }
        .col-md-3
          = delivery_f.input :address_3, input_html: { class: "upcase address-3" }
      .row
        .col-md-3
          = delivery_f.input :town, label: "Town or City", input_html: { class: "upcase town" }
        .col-md-3
          = delivery_f.input :postcode, input_html: { class: "upcase postcode" }
        .col-md-3
          = delivery_f.input :country, collection: WavesUtilities::Country.all, include_blank: false, selected: (@submission.delivery_address.country || "UNITED KINGDOM")

