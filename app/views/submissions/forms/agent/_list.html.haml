- agent = @submission.agent
%h2 Agent
%table.table.table-striped
  %thead
    %th Name
    %th Email
    %th Phone
    %th Address
    %th
  %tbody

    - if agent.name.present?
      %tr
        %td.agent-name
          = link_to '#',
            "data-target" => "#edit_agent", "data-toggle" => "modal" do
            = agent
        %td.agent-email= agent.email
        %td.agent-phone_number= agent.phone_number
        %td.agent-address= agent.inline_address
        %td
          = link_to submission_agent_path(@submission, agent),
            class: 'btn-link',
            method: :delete,
            remote: true,
            data: { confirm: "Are you sure you want to remove this agent?" },
            style: 'color: red;' do
            %i.fa.fa-trash
            Remove
- if agent.name.blank?
  .row
    .col-md-12
      = link_to '#', class: 'btn btn-primary',
        "data-target" => "#edit_agent",
        "data-toggle" => "modal" do
        %i.fa.fa-plus
        Add Agent

