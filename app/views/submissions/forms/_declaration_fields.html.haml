.nested-fields
  = f.simple_fields_for :owner do |owner_f|
    - owner_f.object = f.object.owner
    .x_panel
      .x_content
        .x_title
          %h4 Owner
        .row
          .col-md-3
            = owner_f.input :name, label: "Owner Name", input_html: { class: "upcase owner-name" }, required: false
          .col-md-3
            = owner_f.input :email, required: false
          .col-md-3
            = owner_f.input :phone_number, label: "Phone Number", input_html: { class: "upcase" }, required: false
          .col-md-3
            = owner_f.input :nationality, label: "Country of Nationality", as: :select, collection: WavesUtilities::Nationality.all, input_html: { class: "upcase" }, required: false
        .row
          .col-md-3
            = owner_f.input :address_1, input_html: { class: "upcase" }, required: false
          .col-md-3
            = owner_f.input :address_2, input_html: { class: "upcase" }, required: false
          .col-md-3
            = owner_f.input :address_3, input_html: { class: "upcase" }, required: false
          .col-md-3
            = owner_f.input :town, label: "Town or City", input_html: { class: "upcase" }, required: false
        .row
          .col-md-3
            = owner_f.input :postcode, input_html: { class: "upcase" }, required: false
        .row
          .col-md-12
            = link_to_remove_association f, class: "warning" do
              %i.fa.fa-trash
              Remove Owner
