= f.simple_fields_for :owner do |owner_f|
  - owner_f.object = f.object.owner
  .x_panel
    .x_content
      .x_title
        %h4 Owner
      .row
        .col-md-3
          = owner_f.input :name, input_html: { class: "upcase" }, required: false
      .row
        .col-md-12
          = link_to "#", class: "warning" do
            %i.fa.fa-trash
            Remove Owner
