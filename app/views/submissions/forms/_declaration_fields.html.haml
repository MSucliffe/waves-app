.nested-fields
  = f.simple_fields_for :owner do |owner_f|
    - owner_f.object = f.object.owner
    .x_panel
      .x_content
        .x_title
          %h4 Owner
        .row
          .col-md-3
            = owner_f.input :name, label: "Owner Name", input_html: { class: "upcase owner-name" }, required: false
          .col-md-3
            = owner_f.input :email, required: false
          .col-md-3
            = owner_f.input :phone_number, label: "Phone Number", input_html: { class: "upcase" }, required: false
          .col-md-3
            = owner_f.input :nationality, label: "Country of Nationality", as: :select, collection: WavesUtilities::Nationality.all, input_html: { class: "upcase" }, required: false
        .row#postcode-lookup
          .col-md-4
            %label.form-label-bold{ for: "#postcode_lookup_field" }
              Postcode
            .input-group
              = text_field_tag :postcode_lookup_field, "", class: "form-control"
              %span.input-group-btn
                = link_to "Lookup address", "#", id: "postcode_lookup_button", class: "btn btn-primary"
          .col-md-8
        .row
          .col-md-4.form-group
            #postcode_lookup_api_key.hidden= ENV["POSTCODE_LOOKUP_API_KEY"]
            #lookup_field
        .clearfix
        .row
          .col-md-3
            = owner_f.input :address_1, input_html: { class: "upcase address_1" }, required: false
          .col-md-3
            = owner_f.input :address_2, input_html: { class: "upcase address_2" }, required: false
          .col-md-3
            = owner_f.input :address_3, input_html: { class: "upcase address_3" }, required: false
          .col-md-3
            = owner_f.input :town, label: "Town or City", input_html: { class: "upcase town" }, required: false
        .row
          .col-md-3
            = owner_f.input :postcode, input_html: { class: "upcase postcode" }, required: false
        .row
          .col-md-12
            = link_to_remove_association f, class: "warning" do
              %i.fa.fa-trash
              Remove Owner
