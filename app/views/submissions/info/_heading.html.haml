- submission = Decorators::Submission.new(submission)
.row
  .col-sm-6
    %h1{style: "margin-top: 0px !important;"}
      = submission.job_type
      %small
        ID:
        = submission.ref_no || "Not yet generated"
  .col-sm-6.pull-right
    - if submission.editable? && submission.claimant == current_user
      = link_to "Edit Application",
        edit_submission_path(submission),
        class: "btn btn-primary pull-right"

.row
  .col-md-12
    .x_panel
      .x_content
        .row
          .col-sm-4
            %table.table
              %tbody
                %tr
                  %td.soft-label.no-top-border Source:
                  %td.no-top-border
                    %strong= submission.source_description
                %tr
                  %td.soft-label Date Received:
                  %td
                    %strong= submission.received_at
                %tr
                  %td.soft-label Target Date:
                  %td
                    %strong= submission.target_date
          .col-sm-4
            %table.table
              %tbody
                %tr
                  %td.soft-label.no-top-border Official No.:
                  %td.no-top-border
                    -if submission.vessel_reg_no.present?
                      %strong= link_to submission.vessel_reg_no, vessel_path(@submission.registered_vessel)
                %tr
                  %td.soft-label Vessel Name:
                  %td.vessel-name
                    %strong= submission.vessel_name
                %tr
                  %td.soft-label Payment Received:
                  %td
                    %strong= "Â£#{number_with_precision(submission.payment_received.to_f / 100, precision: 2)}"
          .col-sm-4
            %table.table
              %tbody
                %tr
                  %td.soft-label.no-top-border Applicant Name:
                  %td.no-top-border
                    %strong= submission.applicant_name

                %tr
                  %td.soft-label Applicant's Email:
                  %td
                    %strong= submission.applicant_email
                %tr
                  %td.soft-label Declarations:
                  %td
                    %strong= submission.declaration_status

