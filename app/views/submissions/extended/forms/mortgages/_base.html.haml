%h2 Mortgages
%table.table.table-striped
  %thead
    %th Priority
    %th Mortgage Type
    %th Reference Number
    %th Start Date
    %th End Date
    %th Amount
    %th Mortgagor(s)
    %th Mortgagee(s)
    %th
  %tbody
    - @submission.mortgages.each do |mortgage|
      %tr
        %td.priority A
        %td.mortgage_type= mortgage.mortgage_type
        %td.reference_number= mortgage.reference_number
        %td.start_date= mortgage.start_date
        %td.end_date= mortgage.end_date
        %td.amount= mortgage.amount
        %td.mortgagor= mortgage.mortgagor
        %td.mortgagees
.row
  .col-md-12
    = link_to '#', class: 'btn btn-primary',
      "data-target" => "#new_mortgage",
      "data-toggle" => "modal" do
      %i.fa.fa-plus
      Add Mortgage

.modal.fade{id: "new_mortgage", role: "dialog", tabindex: "-1"}
  .modal-dialog.modal-lg
    .modal-content
      = simple_form_for Mortgage.new, method: :post, remote: true, url: submission_mortgages_path(@submission) do |mortgage_f|
        = hidden_field_tag "modal_id", "new_mortgage"
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title New Mortgage
        .modal-body
          = render partial: "submissions/extended/forms/mortgages/fields", locals: { mortgage_f: mortgage_f }

        .modal-footer
          = mortgage_f.submit "Add Mortgage", class: "btn btn-primary"
