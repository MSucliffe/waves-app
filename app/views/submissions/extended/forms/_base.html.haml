= simple_form_for @submission, remote: true, class: "form-vertical" do |submission_f|
  .row
    .col-md-12
      .x_panel
        .x_title
          %h2 Application Details
          .clearfix
        .x_content
          %div{"data-example-id" => "togglable-tabs", :role => "tabpanel"}
            %ul#myTab.nav.nav-tabs.bar_tabs{:role => "tablist"}

              %li{:role => "presentation", class: "active"}
                %a#vessel-tab{"aria-expanded" => "true", "data-toggle" => "tab", :href => "#vessel_tab", :role => "tab"} Vessel Details

            #myTabContent.tab-content

              #vessel_tab.tab-pane{class: "active", "aria-labelledby" => "vessel-tab", :role => "tabpanel"}
                = render partial: "submissions/extended/forms/vessel_fields",
                  locals: { submission_f: submission_f, disabled: !@submission.vessel_can_be_edited? }


= content_for :submission_save_buttons do
  = button_tag type: 'submit',
    data: { target: "#save-incomplete-application", toggle: "modal" },
    class: "btn btn-primary btn-lg pull-right" do
    %i.fa.fa-floppy-o
    Save Details

  .modal.fade{id: 'save-incomplete-application', role: "dialog", tabindex: "-1"}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title Saving Application Details
        %form
          .modal-body
            %p.text-center
              = image_tag 'ajax-loader.gif'

