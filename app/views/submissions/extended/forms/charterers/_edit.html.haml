- modal_id = "charter_party_#{charter_party.id}"
.modal.fade{id: modal_id, role: "dialog", tabindex: "-1"}
  .modal-dialog.modal-lg
    .modal-content
      = simple_form_for charter_party,
        remote: true,
        method: :put,
        url: submission_charterer_charter_party_path(@submission, charterer, charter_party) do |f|
        = hidden_field_tag :modal_id, modal_id
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title Edit #{charter_party.entity_type.titleize} Party
        = render partial: "submissions/extended/forms/charterers/fields/#{charter_party.entity_type}", locals: { f: f }
