.modal-body
  .postcode-lookup
    .row
      .col-md-6
        = render partial: "submissions/basic/forms/owners/fields/name", locals: { owner_f: f, f: f }

      .col-md-3
        = render partial: "submissions/basic/forms/owners/fields/nationality", locals: { owner_f: f }
    .row
      .col-md-6
        = f.input :eligibility_status, label: "Status",
          as: :select,
          collection: eligibility_status_collection(@submission)

      .col-md-3
        = f.input :email, label: "Email Address"
      .col-md-3
        = f.input :phone_number, label: "Phone Number", input_html: { class: "upcase" }

    = render partial: "submissions/basic/forms/owners/fields/address", locals: { owner_f: f }

    .row
      .col-md-4
        .form-group
          %label Declaration Signed
          = f.input :declaration_signed,
            label: false,
            as: :radio_buttons,
            item_label_class: "radio-inline",
            item_wrapper_tag: false

.modal-footer
  = button_tag(type: 'submit', class: "btn btn-primary pull-right") do
    Save Individual Party
