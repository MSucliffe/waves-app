%table.table.table-striped.table-fluid.submission
  %thead
    %th Vessel Details
    %th Submitted Information
  %tbody
    %tr
      %td{width: "30%"} Vessel Name
      %td#vessel-name{width: "70%"}
        %strong= vessel.name
    %tr
      %td Hull Identification Number (HIN)
      %td#vessel-hin
        %strong= vessel.hin
    %tr
      %td Make and model
      %td#vessel-make
        %strong= vessel.make_and_model
    %tr
      %td Length
      %td#vessel-length_in_meters
        %strong= number_with_precision(vessel.length_in_meters, precision: 2)
    %tr
      %td Number of hulls
      %td#vessel-number_of_hulls
        %strong= vessel.number_of_hulls
    %tr
      %td Vessel type
      %td#vessel_type
        %strong= vessel.type_of_vessel

    %tr
      %td MMSI Number
      %td#vessel-mmsi_number
        %strong= vessel.mmsi_number
    %tr
      %td Radio Call Sign
      %td#vessel-radio_call_sign
        %strong= vessel.radio_call_sign
