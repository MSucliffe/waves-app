.modal.fade{id: "cancel-application", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      = simple_form_for Notification.new, url: cancel_notification_path(submission) do |f|
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title Cancel Application
        .modal-body
          .row
            .col-sm-12
              .form-group
                = f.input :subject, as: :select, label: "Reason for cancelling application",
                  collection: Notification::Cancellation::REASONS,
                  include_blank: false
          .row
            .col-sm-12
              .form-group
                = render partial: "shared/fields/message_editor",
                  locals: { f: f, message_type: :cancel }
        .modal-footer
          = f.submit "Cancel Application", class: "btn btn-lg btn-info"
