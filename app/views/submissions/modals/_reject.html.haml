.modal.fade{id: "reject-application", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      = simple_form_for Notification.new, url: reject_notification_path(submission) do |f|
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title Reject Application
        .modal-body
          %p Rejecting this application will create a task for your manager to approve a refund.
          %hr
          .row
            .col-sm-12
              .form-group
                = f.input :subject, as: :select, label: "Reason for Rejection", collection: ["Unsuitable Name", "Too Long", "Fraudulent"], include_blank: false
          .row
            .col-sm-12
              .form-group
                = f.input :body, label: "Additional Information", input_html: {rows: 3}
        .modal-footer
          = f.submit "Reject Application", class: "btn btn-lg btn-danger"
