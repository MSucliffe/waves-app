<div class="navbar-header">
  <a class="navbar-brand" href="#">VRS</a>
  <select class="selectpicker show-tick" data-style="btn-primary" data-header="Select your registry">
    <option disabled>Part I</option>
    <option disabled>Part II</option>
    <option selected>Part III</option>
    <option disabled>Part IV</option>
  </select>
  <span class="messages-notifier nav-adjust-top-8">
    <button class="btn btn-success" type="button">
      <span class="glyphicon glyphicon-envelope" aria-hidden="true">
      </span>
      <span class="badge">0</span>
    </button>
  </span>
</div>

<div class="pull-right">
  <form class="navbar-form pull-left" role="search">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
      <div class="input-group-btn">
        <button class="btn btn-default" type="submit">
          <i class="glyphicon glyphicon-search"></i>
        </button>
      </div>
    </div>
  </form>
  <%= link_to raw("<span class='glyphicon glyphicon-log-out'></span>"),
    sign_out_path,
    method: :delete,
    class: "btn btn-default btn-sm nav-adjust-top-10" %>
</div>
<div class="pull-right">
  <%= link_to raw("<span class='glyphicon glyphicon-user'></span>"),
    "#",
    class: "btn btn-default btn-sm nav-adjust-top-10" %>
</div>

