.registration_status
  - if registration_status == :registered
    .label.label-success Registered

  - elsif registration_status == :expired
    .label.label-default Registration Expired

  - elsif registration_status == :closed
    .label.label-warning Registration Closed

  - elsif registration_status == :pending
    .label.label-info In Progress

  - elsif registration_status == :frozen
    .label.label-danger Frozen
