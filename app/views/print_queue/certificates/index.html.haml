.row
  %h1.heading_no_top_margin
    Print Queue: Certificates of Registry

.row
  .col-md-12
    .x_panel
      %table#print_queue.table.table-striped.table-hover
        %thead
          %tr
            %th Vessel
            %th Offical Number
            %th
              = link_to print_queue_certificates_path(format: :pdf), class: "btn btn-primary" do
                %i.fa.fa-print
                Print Certificates of Registry
            %th
              = link_to '#', class: 'btn btn-primary' do
                %i.fa.fa-print
                Print Cover Letters

        - @submissions.each do |submission|
          %tbody
            %td= submission.registered_vessel
            %td= submission.registered_vessel.reg_no
            %td.certificate
              - if submission.printed?(:registration_certificate)
                = "Printed: #{ submission.print_jobs["registration_certificate"].in_time_zone.to_s(:date_time) }"
            %td.cover-letter
              - if submission.printed?(:cover_letter)
                = "Printed: #{ submission.print_jobs["cover_letter"].in_time_zone.to_s(:date_time) }"
