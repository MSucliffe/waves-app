- i = owner_counter + 1
%table.table.table-striped{ id: "owner_#{i}" }
  %thead
    %th
      Owner ##{ i }
      - if i == 1
        (Correspondent)
    %th
  %tbody
    %tr
      %td{width: '30%'} Owner Name
      %td.owner-name{width: '35%'}
        %strong #{ owner.name }
    %tr
      %td Owner Address
      %td
        %strong= owner.inline_address
    %tr
      %td Owner Address
      %td
        %strong= owner.inline_address
    %tr
      %td Owner Email
      %td
        %strong= owner.email
    %tr
      %td Owner Phone Number
      %td
        %strong= owner.phone_number
    %tr
      %td Owner Nationality
      %td
        %strong= owner.nationality
%hr
