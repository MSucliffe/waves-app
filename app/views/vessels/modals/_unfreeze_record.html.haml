.modal.fade{id: 'unfreeze-record', role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title Unfreeze Record

      = simple_form_for Note.new(content: "Vessel Unfrozen: "), url: vessel_cold_storage_path(vessel), method: :post do |f|
        .modal-body
          .row
            .col-sm-12
              .form-group
                = f.input :content, label: "Reason", as: :text, input_html: { rows: 3 }
        .modal-footer
          = f.submit "Unfreeze Record", class: "btn btn-danger submit_unfreeze_record"
