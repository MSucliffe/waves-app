.row
  .col-md-12
    .x_panel
      .x_content
        .row
          .col-md-8
            = f.input :name
        .row
          .col-md-8
            = f.input :email
        .row
          .col-md-8
            = f.input :access_level, as: :select,
              collection: User.access_levels.keys.map {|access_level| [access_level.titleize, access_level]},
              label: "Role",
              include_blank: false
        .row
          .col-md-8
            = f.input :disabled, as: :boolean, label: "Disable Account (User will not be able to login)", wrapper_html: { class: "padded-checkbox" }
        .row
          .col-md-12
            .pull-right
              = link_to "Cancel", admin_users_path, class: 'btn btn-lg btn-danger'
              = f.submit "Save", class: "btn btn-lg btn-success"


