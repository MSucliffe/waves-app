= render partial: "/finance/payments/heading"

.row
  .col-md-12
    .x_panel
      .x_content
        - if @prompt_success
          .alert.alert-success
            %p.text-center{style: 'font-size: 1.4em;'}
              Fee entry successfully recorded.
        - if @prompt_update
          .alert.alert-warning
            %p.text-center{style: 'font-size: 1.4em;'}
              Fee entry successfully updated.

        = render partial: "payment", locals: { finance_payment: @finance_payment }

.row.no-print#actions
  .col-md-12
    = link_to finance_batch_payments_path(@batch),
      class: 'btn btn-primary btn-lg' do
      %i.fa.fa-arrow-left
      Batch #{@batch.batch_no}

    = link_to edit_finance_batch_payment_path(@batch, @finance_payment),
      class: 'btn btn-warning btn-lg' do
      Edit Fee Entry

    = link_to new_finance_batch_payment_path(@batch),
      class: 'btn btn-success btn-lg pull-right' do
      %i.fa.fa-plus
      New Fee Entry
