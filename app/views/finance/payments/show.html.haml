= render partial: "/finance/payments/heading"

.row
  .col-md-12
    .x_panel
      .x_content
        - if @prompt_success
          .alert.alert-success
            %p.text-center{style: 'font-size: 1.4em;'}
              Fee entry successfully recorded.

        = render partial: "payment", locals: { finance_payment: @finance_payment }

.row.no-print
  .col-md-12
    = link_to finance_batch_path(@batch), method: :patch,
      class: 'btn btn-primary btn-lg' do
      %i.fa.fa-check
      End Batch

    = link_to new_finance_batch_payment_path(@batch),
      class: 'btn btn-success btn-lg pull-right' do
      %i.fa.fa-plus
      New Fee Entry
