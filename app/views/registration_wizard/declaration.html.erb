<div class="grid-row">
  <div class="column-two-thirds">
    <h1 class="heading-xlarge"><%= t("registration.title") %></h1>

    <h3 class="heading-medium"><%= t("registration.declaration.title") %></h3>

    <p><%= t("registration.declaration.warning") %></p>

    <%= simple_form_for @registration, url: wizard_path, method: :put do |f| %>
      <legend class="visuallyhidden"><%= t("registration.declaration.title") %></legend>

      <%= f.input :id, as: :hidden %>

      <% if f.error_notification %>
        <div class="error-summary" role="group" aria-labelledby="error-summary-heading" tabindex="-1">
          <h1 class="heading-medium error-summary-heading" id="error-summary-heading">
            <%= f.error_notification %>
          </h1>

          <p><%= t("registration.error_description") %></p>
        </div>
      <% end %>

      <p>
        <%= render partial: "vessel_info", locals: { vessel: @vessel } %>
        <br>
        <%= render partial: "owner_info", locals: { owner: @owner } %>
      </p>

      <br>

      <p><%= t("registration.declaration.prompt") %></p>

      <div class="form-group<%= " error" if f.error_notification %>">
        <%= f.input :eligible_under_regulation_89, as: :boolean, wrapper: false, label_html: {class: "block-label"} %>
        <%= f.input :eligible_under_regulation_90, as: :boolean, wrapper: false, label_html: {class: "block-label"} %>
        <%= f.input :understands_false_statement_is_offence, as: :boolean, wrapper: false, label_html: {class: "block-label"} %>
      </div>

      <%= f.button :submit, class: "button" %>
    <% end %>
  </div>
</div>
