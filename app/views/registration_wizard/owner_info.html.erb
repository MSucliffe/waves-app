<div class="grid-row" id="owner-info">
  <div class="column-two-thirds">
    <h1 class="heading-xlarge"><%= t("registration.title") %></h1>

    <h3 class="heading-medium"><%= t("registration.owner_info.title") %></h3>

    <p><%= t("registration.owner_info.prompt") %></p>

    <%= simple_form_for @registration, url: wizard_path, method: :put do |f| %>
      <legend class="visuallyhidden"><%= t("registration.owner_info.title") %></legend>

      <%= f.input :id, as: :hidden %>

      <% if f.error_notification %>
        <div class="error-summary" role="group" aria-labelledby="error-summary-heading" tabindex="-1">
          <h1 class="heading-medium error-summary-heading" id="error-summary-heading">
            <%= f.error_notification %>
          </h1>

          <p><%= t("registration.error_description") %></p>
        </div>
      <% end %>

      <%= f.simple_fields_for :owner, @owner do |of| %>
        <%= form_select of, :title, owner_title_collection %>
        <%= form_input of, :first_name %>
        <%= form_input of, :last_name %>
        <%= form_country_select of, :nationality %>
        <%= form_input of, :email, as: :email %>
        <%= form_input of, :mobile_number %>
        <%= form_input of, :phone_number %>
      <% end %>

      <%= f.button :submit, class: "button" %>
    <% end %>
  </div>
</div>
