.row
  .col-md-6
    %h1 Target Date Calculator
.row
  .col-md-6
    .pull-sright
      = form_tag '/target_dates', method: :get do
        = select_date @start_date,  prefix: 'start_date', order: [:day, :month, :year]
        = submit_tag 'Calculate'
%br
.row
  .col-md-6
    .x_panel
      .x_content
        %p
          Urgent processing target date (3 working days):
          %strong= TargetDate.new(@start_date, :urgent).calculate
        %p
          Standard processing target date (10 working days):
          %strong= TargetDate.new(@start_date, :standard).calculate

%h3 Bank Holidays in Wales

%p
  This data is read from
  = link_to "Gov UK", "https://www.gov.uk/bank-holidays", target: "_blank"
.row
  .col-md-6
    %table.table.table-striped
      %thead
        %th Date
        %th Title
      %tbody
        - @holidays.each do |holiday|
          %tr
            %td= holiday.holiday_date.strftime("%A, %d %B %Y")
            %td= holiday.title
