.modal.fade{id: "edit-note-#{ note.id }", role: "dialog", tabindex: "-1"}
  .modal-dialog.modal-md
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4= "Note on #{ note.created_at.to_s(:date_time) }"
      = simple_form_for note,
                        url: submission_note_path(submission, note),
                        method: :put,
                        remote: true do |f|
        .modal-body
          .row
            .col-md-12
              = f.input :content, label: "Content", as: :text, input_html: { rows: 6 }
        .modal-footer
          = f.submit "Edit Note", class: "btn btn-primary"
