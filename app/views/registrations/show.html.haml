.row
  .col-sm-6
    %h1{style: "margin-top: 0px !important;"}
      = "@submission.job_type"
      %small
        ID:
        = @registration.submission_ref_no
  .col-sm-6
    .pull-right
      - if Task.new(@task).prints_certificate?
        = link_to registration_certificate_path(@registration, format: :pdf), target: "_blank", class: "btn btn-warning" do
          %i.fa.fa-print{style: "font-size: 1.2em;"}
          Print Certificate of Registry
        = link_to registration_cover_letter_path(@registration, format: :pdf), target: "_blank", class: "btn btn-warning" do
          %i.fa.fa-print{style: "font-size: 1.2em;"}
          Print Cover Letter

.row
  .col-md-12.col-sm-12.col-xs-12
    .x_panel
      .x_title
        %h2 Task Complete
        .clearfix
      .x_content
        %p
          = t("submission.approval.confirmation.#{@task}",
            part: Activity.new(@part))

.row.no-print
  .col-xs-12
    = link_to tasks_my_tasks_path, class: "btn btn-info btn-lg" do
      %i.fa.fa-list-ol
      Return to My Tasks
    .pull-right
      = link_to tasks_next_task_path, class: 'btn btn-success btn-lg' do
        %i.fa.fa-arrow-circle-right{style: 'font-size: 1.2em; font-weight: bold;'}
        Process Next Application
