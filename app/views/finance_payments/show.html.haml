- @finance_payment = Decorators::FinancePayment.new(@finance_payment)
%h1= @finance_payment.page_heading

.row
  .col-md-6
    = render partial: "finance_payment", locals: { finance_payment: @finance_payment }
  .col-md-6
    #related_submission.x_panel
      .x_content
        %table.table
          %thead
            %th Related Application
          %tbody
            - if @related_submission.blank?
              %tr
                %td No Related Applications
            - else
              = render partial: "search/submission", locals: { submission: @related_submission }
              %tr
                %td
                  = simple_form_for @finance_payment.payment,
                    url: finance_payment_payment_path(@finance_payment, @finance_payment.payment),
                    method: :put do |f|
                    - f.object.submission_id = @related_submission.id
                    = f.input :submission_id, as: :hidden
                    = button_tag(type: "submit", class: "btn btn-success pull-right") do
                      Link to this Application

    #related_vessel.x_panel
      .x_content
        %table.table
          %thead
            %th{colspan: 3} Related Vessel
          %tbody
            - if @related_vessel.blank?
              %tr
                %td{colspan: 3} No Related Vessels
            - else
              = render partial: "search/vessel", locals: { vessel: @related_vessel }


= render partial: "actions"
