  -#       Claim Selected Tasks

.x_panel
  .x_title
    %h4= subheading
    .clear
  %table#submissions.table.table-striped.table-hover
    %thead
      %tr
        %th Vessel
        %th Applicant
        %th Job Type
        %th Target
        %th Payment
        %th Source
        %th
    %tbody
      - submissions.each do |submission|
        %tr.submission
          %td= link_to submission.vessel, submission_path(submission)
          %td= submission.applicant
          %td= submission.job_type
          %td= submission.target_date
          %td= css_tick(submission.paid?)
          %td= submission.source
          %td= render partial: "/tasks/actions/claim_button", locals: {submission: submission}
