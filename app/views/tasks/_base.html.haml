.right_col{role: 'main'}
  .row
    .col-sm-9
      %h1{style: 'margin-top: 0px !important;'}
        = heading
    / .col-sm-3
    /   .pull-right
    /     = link_to '/part-3/processing/new-submission', class: 'btn btn-primary' do
    /       %i.fa.fa-arrow-circle-right{style: 'font-size: 1.2em; font-weight: bold;'}
    /       Process Next Application

  .row
    .col-md-12
      .x_panel
        .x_title
          %h4= heading
        %table#submissions.table.table-striped.table-hover
          %thead
            %tr
              %th Vessel
              %th Applicant
              %th Job Type
              %th Target
              %th Payment
              %th Source
              %th
          %tbody
            - submissions.each do |submission|
              %tr.submission
                %td= link_to submission.vessel.name, submission_path(submission)
                %td= submission.applicant
                %td= submission.job_type
                %td= submission.target_date
                %td= css_tick(submission.paid?)
                %td= submission.source
                %td
                  %button.btn.btn-default.btn-xs{"data-target" => "#unclaim-work", "data-toggle" => "modal", :type => "button"}
                    Claim

  / .row
  /   .col-md-12
  /     .x_panel
  /       .x_title
  /         %h4 Applications to be processed
  /       .x_content
  /         %p.text-center
  /           / = image_tag 'hs-huzzah-01.svg', width: '100px'
  /         %h2.text-center
  /           Tasks Complete
  /         %p.text-center
  /           Your task list is clear.
  /         %p.text-center
  /           = link_to 'Get More Work', '/part-3/tasks/unclaimed-tasks', class: 'btn btn-primary'
